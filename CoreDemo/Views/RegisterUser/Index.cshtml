@model UserSignUpViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@*<link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">*@
@*<link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">*@
@*<link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">*@
@*<link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">*@
@*<link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">*@

<section class="main-content-w3layouts-agileits">
    @*<div style="margin-left:150px">*@
    <div class="container">
        <h3 class="tittle">Oturum Aç</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form action="#" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Adınız ">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" asp-for="@Model.Surname" placeholder="Soyadınız">
                            <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="E-Posta Adresiniz" required="">
                            <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Kullanıcı Adınız">
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifreniz" required="">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Şifre Tekrar" required="">
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="checkbox i-checks">
                            <label >
                                <input type="checkbox" asp-for="@Model.TermsOfUse"><i></i>
                                Kullanım şartlarını okudum kabul ediyorum.
                            </label>
                        </div>
                    </div>
                    <span class="text-danger"></span>
                    <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol!</button>

                    <p class="text-muted text-center" ><small>Bir hesabınız var mı?</small></p>
                    <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Giriş Yap</a>

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                </form>
            </div>
        </div>
    </div>
    @*</div>*@
</section>





